
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="kappathetapi.ktp.MemberProfileFragment"
    android:weightSum="1" android:orientation="vertical">

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:id="@+id/profile_pic_view"
        android:layout_rowSpan="3"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="28dp"
        android:text="New Text"
        android:id="@+id/profile_name"
        android:layout_gravity="start|top"
        android:layout_column="1"
        android:layout_row="0"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/profile_year"
        android:layout_weight="0.19"
        android:textSize="22sp"
        android:layout_gravity="start|top"
        android:layout_column="1"
        android:layout_row="1"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/profile_major"
        android:textSize="22sp"
        android:layout_gravity="start|top"
        android:layout_column="1"
        android:layout_row="2"
        android:layout_columnSpan="2"
        android:gravity="center"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:textSize="18sp"
        android:id="@+id/profile_bio"
        android:layout_row="3"
        android:layout_column="0"
        android:layout_columnSpan="3"/>

</GridLayout>
